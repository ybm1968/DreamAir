<!-- 전체 조회 -->
<select id="user_list" resultType="Users">
SELECT *
FROM users
</select>

<!-- 사용자 등록 -->
<insert id="user_insert">
INSERT INTO users ( user_no, auth_no, user_id, user_pw, name, address, phone, email, status) 
VALUES(
  #{userNo}, #{authNo}, #{userId}, #{userPw}, #{name}, #{address}, #{phone}, #{email}, #{status}
)  
</insert>

<!-- 사용자 수정 -->
<update id="user_update">
UPDATE users
SET auth_no = #{authNo}
  , user_id = #{userId} 
  , user_pw = #{userPw}
  , name = #{name}
  , address = #{address}
  , phone = #{phone}
  , email = #{email}
  , status = #{status}
WHERE user_no = #{userNo}
</update>

<!-- 사용자 삭제 -->
<delete id="user_delete">
DELETE FROM users
WHERE user_no = #{userNo}
</delete>

